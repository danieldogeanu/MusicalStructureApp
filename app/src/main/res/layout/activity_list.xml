<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    tools:context="com.danieldogeanu.android.musicalstructureapp.ListActivity">

    <LinearLayout
        android:id="@+id/header"
        style="@style/CompactHeader">

        <fragment
            android:name="com.danieldogeanu.android.musicalstructureapp.HeaderActionBar"
            android:id="@+id/headerActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activityListView"
        style="@style/ActivityListView" />

    <LinearLayout
        style="@style/MediaControlsFragmentContainer">

        <fragment
            android:name="com.danieldogeanu.android.musicalstructureapp.MediaControlsFragment"
            android:id="@+id/mediaControlsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
